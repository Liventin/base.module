{
  "name": "liventin/base.module",
  "type": "bitrix-d7-module",
  "description": "Base functionality for Bitrix module template, including options service",
  "require": {
    "php": ">=8.1"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest"
  },
  "scripts": {
    "post-update-cmd": [
      "/usr/bin/php --version",
      "/usr/bin/php vendor/liventin/base.module/post-install.php"
    ],
    "post-install-cmd": [
      "@post-update-cmd"
    ]
  }
}