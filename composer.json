{
  "name": "Liventin/base.module",
  "type": "bitrix-module",
  "description": "Base functionality for Bitrix module template, including options service",
  "require": {
    "php": ">=8.1",
    "bitrix/main": "*"
  }
  ,
  "require-dev": {
    "roave/security-advisories": "dev-latest"
  },
  "autoload": {
    "psr-4": {
      "Base\\Module\\": "src/"
    }
  },
  "extra": {
    "installer-paths": {
      "./": ["type:bitrix-module"]
    },
    "exclude-from-files": [
      "scripts/post-install.php"
    ]
  },
  "scripts": {
    "post-install-cmd": [
      "php scripts/post-install.php"
    ],
    "post-update-cmd": [
      "php scripts/post-install.php"
    ]
  }
}
