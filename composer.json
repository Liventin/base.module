{
  "name": "Liventin/base.module",
  "type": "bitrix-d7-module",
  "description": "Base functionality for Bitrix module template, including options service",
  "require": {
    "php": ">=8.1"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest"
  },
  "extra": {
    "installer-paths": {
      "./src/": [
        "type:bitrix-d7-module"
      ]
    }
  },
  "scripts": {
    "post-install-cmd": [
      "php scripts/post-install.php"
    ],
    "post-update-cmd": [
      "php scripts/post-install.php"
    ]
  }
}